FROM ghcr.io/void-linux/void-glibc-full:latest
MAINTAINER Floatstinger
RUN xbps-install -Sy firefox
RUN mkdir -p /etc/firefox/policies
RUN echo "{
    "policies":{
	"DisableTelemetry":true
	"Extensions":{
	    "Install":[
		"https://addons.mozilla.org/firefox/downloads/file/4493940/bitwarden_password_manager-2025.5.0.xpi",
		"https://addons.mozilla.org/firefox/downloads/file/4492375/ublock_origin-1.64.0.xpi"
	    ]
	}
    }
}" >> /etc/firefox/policies/policies.json
RUN cat /etc/firefox/policies/policies.json
CMD ["/usr/bin/firefox"]